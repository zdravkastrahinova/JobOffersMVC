@model JobOffersMVC.ViewModels.JobOffers.JobOfferListViewModel

@{
    ViewData["Title"] = "List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Edit">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.JobOffers) {
    <tr>
        <td>@item.Title</td>
        <td>@item.Description</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id})
        </td>
    </tr>
}
    </tbody>
</table>
